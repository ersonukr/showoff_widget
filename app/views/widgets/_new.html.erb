<div class="modal-header">
  <h5 class="modal-title" id="widgetModalLabel">New Widget</h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="modal-body">
  <%= form_with scope: :widget, url: widgets_path do |f| %>
    <div class="form-group">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, class:"form-control"%>
    </div>
    <div class="form-group">
      <%= f.label :description %><br />
      <%= f.text_area :description, autofocus: true, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :kind %><br />
      <%= f.label :kind, "Visible", :value => "visible", class: "radio-inline" %>
      <%= f.radio_button :kind, 'visible', checked: true %>
      <%= f.label :kind, "Hidden", :value => "hidden", class: "radio-inline" %>
      <%= f.radio_button :kind, 'hidden' %>
    </div>
    <div class="form-group">
      <%= f.submit "Create Widget", class:"btn btn-primary form-control" %>
    </div>
  <% end %>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
</div>