<div id="flashMsg">
  <% flash.each do |type, msg| %>
    <div class="flash-message <%= flash_class(type.to_sym) %>">
      <%= msg %>
    </div>
  <% end %>
</div>
<script>
    $(function() {
        $('.flash-message').delay(500).fadeIn('normal', function() {
            $(this).delay(1500).fadeOut();
        });
    });
</script>